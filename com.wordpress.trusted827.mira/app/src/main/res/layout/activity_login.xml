<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             android:layout_width="fill_parent"
                                             android:layout_height="fill_parent">

    <ImageView android:id="@+id/ivLogo"
               xmlns:app="http://schemas.android.com/apk/res-auto"
               android:layout_width="75.0dip"
               android:layout_height="75.0dip"
               android:layout_marginTop="16.0dip"
               android:src="@mipmap/ic_launcher"
               app:layout_constraintLeft_toLeftOf="parent"
               app:layout_constraintRight_toRightOf="parent"
               app:layout_constraintTop_toTopOf="parent"/>

    <TextView xmlns:n3="http://schemas.android.com/apk/res-auto"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="5.0dip"
              android:text="It looks"
              android:textColor="@color/colorAccent"
              android:textSize="22.0sp"
              android:textStyle="italic"
              n3:layout_constraintLeft_toLeftOf="parent"
              n3:layout_constraintRight_toRightOf="parent"
              n3:layout_constraintTop_toBottomOf="@id/ivLogo"/>

    <android.support.design.widget.TextInputLayout android:id="@+id/textInputLayout"
                                                   xmlns:n4="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="300.0dip"
                                                   android:layout_height="wrap_content"
                                                   n4:layout_constraintBottom_toBottomOf="parent"
                                                   n4:layout_constraintLeft_toLeftOf="parent"
                                                   n4:layout_constraintRight_toRightOf="parent"
                                                   n4:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/etPhone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Introduce your phone number"
            android:inputType="phone"
            android:lines="1"
            android:maxLength="20"
            android:textSize="14.0sp"/>
    </android.support.design.widget.TextInputLayout>

    <Button android:id="@+id/btnLogin"
            style="@style/CustomButton"
            xmlns:n5="http://schemas.android.com/apk/res-auto"
            android:layout_width="300.0dip"
            android:layout_height="wrap_content"
            android:layout_marginTop="30.0dip"
            android:text="Signin"
            n5:layout_constraintLeft_toLeftOf="parent"
            n5:layout_constraintRight_toRightOf="parent"
            n5:layout_constraintTop_toBottomOf="@id/textInputLayout"/>
</android.support.constraint.ConstraintLayout>